<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.home.quizapp.MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:src="@drawable/quiz" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:text="@string/heading"
                android:textColor="#ff0000"
                android:textSize="40dp"
                android:textStyle="bold" />

        </LinearLayout>

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:hint="@string/name"
            android:inputType="textCapWords" />

        <Button
            android:id="@+id/take_quiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:text="@string/start" />

        <LinearLayout
            android:id="@+id/questions_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:visibility="visible">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/question_1"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/question_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <RadioButton
                    android:id="@+id/qtn1_ans1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="20dp"
                    android:text="@string/question_1_option_1" />

                <RadioButton
                    android:id="@+id/qtn1_ans2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="20dp"
                    android:text="@string/question_1_option_2" />

                <RadioButton
                    android:id="@+id/qtn1_ans3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="20dp"
                    android:text="@string/question_1_option_3" />

                <RadioButton
                    android:id="@+id/qtn1_ans4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="20dp"
                    android:text="@string/question_1_option_4" />


            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/question_2"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/question_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <RadioButton
                    android:id="@+id/qtn2_ans1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="20dp"
                    android:text="@string/question_2_option_1" />

                <RadioButton
                    android:id="@+id/qtn2_ans2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="20dp"
                    android:text="@string/question_2_option_2" />

                <RadioButton
                    android:id="@+id/qtn2_ans3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="20dp"
                    android:text="@string/question_2_option_3" />

                <RadioButton
                    android:id="@+id/qtn2_ans4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="20dp"
                    android:text="@string/question_2_option_4" />


            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/question_3"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/qtn3_ans1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="20dp"
                android:text="@string/question_3_option_1" />

            <CheckBox
                android:id="@+id/qtn3_ans2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="20dp"
                android:text="@string/question_3_option_2" />

            <CheckBox
                android:id="@+id/qtn3_ans3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="20dp"
                android:text="@string/question_3_option_3" />

            <CheckBox
                android:id="@+id/qtn3_ans4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:layout_marginLeft="20dp"
                android:text="@string/question_3_option_4" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/question_4"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/qtn4_ans"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/textbox"
                android:inputType="textCapWords" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/question_5"
                android:textSize="18sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/qtn5_pic1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/empire_state" />

                <EditText
                    android:id="@+id/qtn5_ans1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/qtn5_pic1"
                    android:layout_marginBottom="18dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/textbox"
                    android:inputType="textCapWords" />

                <ImageView
                    android:id="@+id/qtn5_pic2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="60dp"
                    android:layout_toRightOf="@id/qtn5_pic1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/mount_rushmore" />

                <EditText
                    android:id="@+id/qtn5_ans2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/qtn5_pic2"
                    android:layout_marginBottom="18dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="6dp"
                    android:layout_toRightOf="@id/qtn5_ans1"
                    android:background="@drawable/textbox"
                    android:inputType="textCapWords" />


            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/question_6"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/question_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <RadioButton
                    android:id="@+id/qtn6_ans1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="20dp"
                    android:text="@string/question_6_option_1" />

                <RadioButton
                    android:id="@+id/qtn6_ans2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="20dp"
                    android:text="@string/question_6_option_2" />

                <RadioButton
                    android:id="@+id/qtn6_ans3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="20dp"
                    android:text="@string/question_6_option_3" />

                <RadioButton
                    android:id="@+id/qtn6_ans4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="20dp"
                    android:text="@string/question_6_option_4" />


            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/question_7"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/question_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <RadioButton
                    android:id="@+id/qtn7_ans1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="20dp"
                    android:text="@string/question_7_option_1" />

                <RadioButton
                    android:id="@+id/qtn7_ans2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="20dp"
                    android:text="@string/question_7_option_2" />

                <RadioButton
                    android:id="@+id/qtn7_ans3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="20dp"
                    android:text="@string/question_7_option_3" />

                <RadioButton
                    android:id="@+id/qtn7_ans4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="20dp"
                    android:text="@string/question_7_option_4" />


            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/question_8"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/qtn8_ans1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="20dp"
                android:text="@string/question_8_option_1" />

            <CheckBox
                android:id="@+id/qtn8_ans2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="20dp"
                android:text="@string/question_8_option_2" />

            <CheckBox
                android:id="@+id/qtn8_ans3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="20dp"
                android:text="@string/question_8_option_3" />

            <CheckBox
                android:id="@+id/qtn8_ans4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:layout_marginLeft="20dp"
                android:text="@string/question_8_option_4" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/question_9"
                android:textSize="18sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/qtn9_pic1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/switzerland" />

                <EditText
                    android:id="@+id/qtn9_ans1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/qtn9_pic1"
                    android:layout_marginBottom="18dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/textbox"
                    android:inputType="textCapWords" />

                <ImageView
                    android:id="@+id/qtn9_pic2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="60dp"
                    android:layout_toRightOf="@id/qtn9_pic1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/turkey" />

                <EditText
                    android:id="@+id/qtn9_ans2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/qtn9_pic2"
                    android:layout_marginBottom="18dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="6dp"
                    android:layout_toRightOf="@id/qtn9_ans1"
                    android:background="@drawable/textbox"
                    android:inputType="textCapWords" />


            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/question_10"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/qtn10_ans1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="20dp"
                android:text="@string/question_10_option_1" />

            <CheckBox
                android:id="@+id/qtn10_ans2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="20dp"
                android:text="@string/question_10_option_2" />

            <CheckBox
                android:id="@+id/qtn10_ans3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="20dp"
                android:text="@string/question_10_option_3" />

            <CheckBox
                android:id="@+id/qtn10_ans4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:layout_marginLeft="20dp"
                android:text="@string/question_10_option_4" />


        </LinearLayout>

        <Button
            android:id="@+id/submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:text="@string/submit" />

    </LinearLayout>
</ScrollView>